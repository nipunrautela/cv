<%- include("header") -%>
  <div class="box" id="heading">
    <h1> <%= listTitle %></h1>
  </div>


  <div class="box">
    <% for(var i=0; i<itemsList.length; i++) { %>
      <label for="item-<%= i %>" class="item-label">
        <div class="item">
          <input type="checkbox" id="item-<%= i %>">
          <p> <%= itemsList[i] %></p>
        </div>
      </label>
    <% } %>

    <form action="/" method="post">
      <input type="text" name="newItemName" placeholder="New Item">

      <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer") -%>
